<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/thumbnail_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

    <ImageView
        android:id="@+id/thumbnail_med"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />


    <ImageView
        android:id="@+id/thumbnail_expi"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />


    <LinearLayout
        android:layout_width="304dp"
        android:layout_height="180dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="-5dp"
        android:layout_toLeftOf="@+id/active_image"
        android:layout_toRightOf="@id/thumbnail_image"
        android:orientation="vertical"
        android:padding="4dp" />


    <LinearLayout
        android:layout_width="304dp"
        android:layout_height="180dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="-5dp"
        android:layout_toLeftOf="@+id/active_med"
        android:layout_toRightOf="@id/thumbnail_med"
        android:orientation="vertical"
        android:padding="4dp" />


    <LinearLayout
        android:layout_width="304dp"
        android:layout_height="180dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="-5dp"
        android:layout_toLeftOf="@+id/active_expi"
        android:layout_toRightOf="@id/thumbnail_expi"
        android:orientation="vertical"
        android:padding="4dp">


        <TextView
            android:id="@+id/recycle_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/abc_primary_text_material_dark"
            android:textSize="20sp"
            tools:text="Medicine Name" />

        <TextView
            android:id="@+id/medicineintake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/abc_primary_text_material_dark"
            android:textSize="20sp"
            tools:text="Medicine Intake" />

        <TextView
            android:id="@+id/Expiration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/abc_primary_text_material_dark"
            android:textSize="20sp"
            tools:text="Expiration Date" />


        <TextView
            android:id="@+id/recycle_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="@color/abc_secondary_text_material_dark"
            android:textSize="15sp"
            tools:text="Date and Time" />

        <TextView
            android:id="@+id/recycle_repeat_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="@color/abc_secondary_text_material_dark"
            android:textSize="15sp"
            tools:text="Repeat No and Type" />

    </LinearLayout>

    <ImageView
        android:id="@+id/active_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_notifications_off_grey600_24dp" />


    <ImageView
        android:id="@+id/active_med"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_notifications_off_grey600_24dp" />


    <ImageView
        android:id="@+id/active_expi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_notifications_off_grey600_24dp" />

</RelativeLayout>